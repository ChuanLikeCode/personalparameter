<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <com.zcdyy.personalparameter.views.CircleImageView
        android:id="@+id/thumbsUp_civ_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/thumbsUp_tv_name"
        android:text="撒娇樱桃"
        android:layout_alignTop="@id/thumbsUp_civ_head"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/title"
        android:textColor="@color/colorBlack"
        android:layout_toRightOf="@id/thumbsUp_civ_head"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/thumbsUp_tv_detail"
        android:text="撒娇樱桃"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="@dimen/content"
        android:textColor="@color/colorDarkGray"
        android:layout_marginTop="5dp"
        android:layout_below="@id/thumbsUp_tv_name"
        android:layout_toRightOf="@id/thumbsUp_civ_head"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/thumbsUp_tv_date"
        android:text="17/01/18"
        android:textSize="@dimen/content"
        android:textColor="@color/colorGray"
        android:layout_below="@id/thumbsUp_tv_name"
        android:layout_alignTop="@id/thumbsUp_tv_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/thumbsUp_tv_name"
        android:layout_marginTop="15dp"
        android:layout_below="@id/thumbsUp_tv_detail"
        layout="@layout/divide_line"/>
</RelativeLayout>